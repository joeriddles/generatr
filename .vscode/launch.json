  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Generatr",
      "type": "debugpy",
      "request": "launch",
      "module": "generatr"
    },
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
        // custom
        "FLASK_DOMAIN": "localhost:5000",
        "FLASK_FORCE_HTTPS": "false",
      },
      "args": ["run"],
      "jinja": true
    }
  ]
}
